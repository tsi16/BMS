@model IEnumerable<NEXT_BMS.Models.BuildingRequest>

@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-header bg-light header-elements-inline py-2">
        <h1>Index</h1>

    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BuildingType)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.RequestStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FirstName)  @Html.DisplayFor(modelItem => item.User.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestedDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>



                        <td>
                            @Html.DisplayFor(modelItem => item.BuildingType.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.RequestStatus.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="AdminReqD" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
    </div>
</div>