@using Insya.Localization;
@model NEXT_BMS.Models.User

@using (Html.BeginForm())
{ 
@await Html.PartialAsync("Controls/_Common")
<div class="card">

    @Html.AntiForgeryToken()
    <div class="card-header bg-light header-elements-inline">
        <h5 class="card-title">
            @Html.Raw(Localization.Get(ViewData["action"].ToString())) | @Html.Raw(Localization.Get(ViewData["pageName"].ToString()))
        </h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <fieldset>
           
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label class="form-label font-weight-semibold">
                    @Html.Raw(Localization.Get("Employee"))
                </label>
                <select name="EmployeeId" class="select-search">
                    <option></option>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.EmployeeId)
                    {
                        <option selected="@item.Selected" value="@item.Value">@item.Text</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Id)

            </div>

            <div class="form-group">
                <label class="form-label font-weight-semibold">
                    @Html.Raw(Localization.Get("MobileNumber"))
                </label>
                @Html.EditorFor(model => model.PhoneNumber)
                @Html.ValidationMessageFor(model => model.PhoneNumber)

            </div>

            <div class="form-group">
                <label class="form-label font-weight-semibold">
                    @Html.Raw(Localization.Get("Email"))
                </label>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)

            </div>

            <div class="form-group">
                <label class="form-label font-weight-semibold">
                    @Html.Raw(Localization.Get("UserName"))
                </label>
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)

            </div>

            @Html.HiddenFor(model => model.Password)
            @Html.HiddenFor(model => model.CreatedDate)
            @Html.HiddenFor(model => model.LastLogon)
            @Html.HiddenFor(model => model.FailureCount)
            @Html.HiddenFor(model => model.BlockEndDate)
        <div class="form-group">
            <label class="form-label font-weight-semibold">
                @Html.Raw(Localization.Get("DefaultLanguageId"))
            </label>
            @Html.EditorFor(model => model.DefaultLanguageId)
            @Html.ValidationMessageFor(model => model.DefaultLanguageId)
        </div>

        <div class="form-group">
            <label class="form-label font-weight-semibold">
                @Html.Raw(Localization.Get("IsActive"))
            </label>
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        </fieldset>
    </div>
    <div class="card-footer">

    </div>
</div>
}

@section Scripts {
    <script type="text/javascript">

    </script>
}
