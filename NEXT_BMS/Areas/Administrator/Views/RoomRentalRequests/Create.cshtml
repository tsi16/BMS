@model NEXT_BMS.Models.RoomRentalRequest
@using Insya.Localization;
@{
    ViewData["Title"] = "Create";
}
@await Html.PartialAsync("Controls/_Common")
<div class="card">
    <div class="card-header bg-light header-elements-inline py-2">
        <h5 class="card-title">
            @Html.Raw(Localization.Get(ViewData["action"].ToString())) | @Html.Raw(Localization.Get(ViewData["pageName"].ToString()))
        </h5>
    </div>
   <div class="card-body p-0">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoomId" class="control-label"></label>
                    <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="RequestStatusId" class="control-label"></label>
                    <select asp-for="RequestStatusId" class="form-control" asp-items="ViewBag.RequestStatusId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="RequestedDate" class="control-label"></label>
                    <input asp-for="RequestedDate" class="form-control" />
                    <span asp-validation-for="RequestedDate" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>

   </div>
    <div class="card-footer">

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
