@using Insya.Localization;

<div class="card">
    <div class="card-header bg-light header-elements-inline py-2">
        <h5 class="card-title">
            @Html.Raw(Localization.Get(ViewData["action"].ToString())) | @Html.Raw(Localization.Get(ViewData["pageName"].ToString()))
        </h5>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Room)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.RequestStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestedDate)
                    </th>

                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestStatus.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestedDate)
                            </td>
                            <td>
                                <a asp-action="adminD" asp-route-controller="RoomRentalRequests" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">

    </div>
</div>
@model IEnumerable<NEXT_BMS.Models.RoomRentalRequest>

@{
    ViewData["Title"] = "Index";
}


