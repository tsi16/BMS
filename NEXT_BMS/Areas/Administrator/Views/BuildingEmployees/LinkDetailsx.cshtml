                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-2">
                <form asp-action="SignUp" asp-controller="BuildingEmployees" method="post">
                    <input type="hidden" id="buildingemployeeId" name="buildingemployeeId" value="@Model.Id" />

                    <div class="mb-0">
                        <label for="FirstName" class="form-label small"><i class="fas fa-user"></i> First Name</label>
                        <input type="text" id="FirstName" name="firstName" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-0">
                        <label for="LastName" class="form-label small"><i class="fas fa-user"></i> Last Name</label>
                        <input type="text" id="LastName" name="lastName" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-0">
                        <label for="UserName" class="form-label small"><i class="fas fa-user"></i> Username</label>
                        <input type="text" id="UserName" name="userName" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-0">
                        <label for="Password" class="form-label small"><i class="fas fa-lock"></i> Password</label>
                        <input type="password" id="Password" name="password" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-0">
                        <label for="PhoneNumber" class="form-label small"><i class="fas fa-phone"></i> Phone</label>
                        <input type="text" id="PhoneNumber" name="phoneNumber" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-0">
                        <label for="Email" class="form-label small"><i class="fas fa-envelope"></i> Email</label>
                        <input type="email" id="Email" name="email" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-0">
                        <label for="GenderId" class="form-label small"><i class="fas fa-venus-mars"></i> Gender</label>
