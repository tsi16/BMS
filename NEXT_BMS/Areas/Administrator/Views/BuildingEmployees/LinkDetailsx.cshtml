                        </select>
                    </div>

                    <div class="d-grid mt-1">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-user-check"></i> Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
