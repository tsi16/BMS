@model NEXT_BMS.Models.Application
@using Insya.Localization;
@using (Html.BeginForm())
{
    @await Html.PartialAsync("Controls/_Common")
    <div class="card">

        @Html.AntiForgeryToken()
        <div class="card-header bg-light header-elements-inline">
            <h5 class="card-title">
                Edit | Application
            </h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <fieldset>
                @*<legend class="font-weight-semibold text-uppercase font-size-sm">Enter required information</legend>*@
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Acronym, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Acronym)
                    @Html.ValidationMessageFor(model => model.Acronym)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Icon, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Icon)
                    @Html.ValidationMessageFor(model => model.Icon)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Code, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Code)
                    @Html.ValidationMessageFor(model => model.Code)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Color, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Color)
                    @Html.ValidationMessageFor(model => model.Color)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Version, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Version)
                    @Html.ValidationMessageFor(model => model.Version)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Url, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.Url)
                    @Html.ValidationMessageFor(model => model.Url)

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "form-label font-weight-semibold" })

                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive)

                </div>


            </fieldset>
        </div><!-- /.box-body -->

        <div class="card-footer">

        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("js/_ValidationScriptsPartial");}

    <script type="text/javascript">
    </script>
}
