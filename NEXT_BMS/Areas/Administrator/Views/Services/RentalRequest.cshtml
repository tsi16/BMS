@model NEXT_BMS.Models.RoomRentalRequest
@using Insya.Localization
@using Microsoft.Extensions.Options

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4 mx-auto" style="max-width: 900px;" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-8">
    <div class="card shadow-lg rounded-4 border-0 mx-auto" style="max-width: 1100px; background-color: #fdfdfd;">
        <div class="card-header bg-white text-center py-4 border-bottom-0">
            <h3 class="fw-bold text-primary mb-0">
                <i class="bi bi-clipboard-data me-2"></i> Rental Request Details
            </h3>
        </div>

        <div class="card-body px-5 py-4">
            <div class="row g-4 fs-5" style="font-size: 1.2rem;">

                <div class="col-md-6">
                    <label class="text-muted fw-semibold" style="font-size: 1rem;">Description</label>
                    <div>@Html.DisplayFor(model => model.Description)</div>
                </div>

                <div class="col-md-6">
                    <label class="text-muted fw-semibold" style="font-size: 1rem;">Room</label>
                    <div>@Html.DisplayFor(model => model.Room.Name)</div>
                </div>

                <div class="col-md-6">
                    <label class="text-muted fw-semibold" style="font-size: 1rem;">Requested Date</label>
                    <div>@Html.DisplayFor(model => model.RequestedDate)</div>
                </div>

                <div class="col-md-6">
                    <label class="text-muted fw-semibold" style="font-size: 1rem;">Is Active</label>
                    <div>@Html.DisplayFor(model => model.IsActive)</div>
                </div>

                <div class="col-md-6">
                    <label class="text-muted fw-semibold" style="font-size: 1rem;">Request Status</label>
                    <div>
                        <span class="badge bg-info text-dark fs-5 px-3 py-2">
                            @Html.DisplayFor(model => model.RequestStatus.Name)
                        </span>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="text-muted fw-semibold" style="font-size: 1rem;">Requested By</label>
                    <div>@Html.DisplayFor(model => model.User.FirstName)</div>
                </div>

            </div>

            <div class="text-center mt-5 d-flex justify-content-center gap-4">
                <form asp-action="UpdateRentalRequestStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="status" value="2" />
                    <button type="submit" class="btn btn-success px-4 py-2 rounded-pill fs-6">
                        <i class="bi bi-check-circle me-1"></i> Accept
                    </button>
                </form>
                <form asp-action="UpdateRentalRequestStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="status" value="3" />
                    <button type="submit" class="btn btn-outline-danger px-4 py-2 rounded-pill fs-6">
                        <i class="bi bi-x-circle me-1"></i> Reject
                    </button>
                </form>
            </div>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between px-4 py-3 border-top-0">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
