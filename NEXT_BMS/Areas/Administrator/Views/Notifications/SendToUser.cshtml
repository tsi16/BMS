@model NEXT_BMS.Models.Notification

<div class="card">
    <div class="card-header">
        <h1>Send Notification to a Specific User</h1>
    </div>
    <div class="card-body">
        <form asp-action="SendToUser" method="post">
            <div class="form-group">
                <label asp-for="UserId">Select User</label>
                <select id="UserId" name="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NotificationTypeId">Notification Type</label>
                <select id="NotificationTypeId" name="NotificationTypeId" class="form-control" asp-items="ViewBag.NotificationTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message">Message</label>
                <textarea id="Message" name="Message" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Send Notification</button>
        </form>
    </div>
    <div class="card-footer">
        <a asp-action="Index">Back to Notifications</a>
    </div>
</div>
